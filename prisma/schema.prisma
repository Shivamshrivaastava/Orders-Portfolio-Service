
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            String   @id @default(uuid())
  clientOrderId String?  @unique
  symbol        String
  side          String   // buy | sell
  qty           Int
  status        String   // pending | filled | partially_filled | rejected | cancelled
  avgPrice      Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  fills         Fill[]
}

model Fill {
  id        String   @id @default(uuid())
  orderId   String
  price     Float
  qty       Int
  timestamp DateTime
  order     Order    @relation(fields: [orderId], references: [id])
  @@index([orderId])
}

model Position {
  symbol    String   @id
  qty       Int
  avgCost   Float
  updatedAt DateTime @updatedAt
}

model Idempotency {
  keyHash   String   @id
  payload   String
  response  String
  createdAt DateTime @default(now())
}
